@model External.Lib.Article[]

@{
    Layout = null;
    var blog = (Connected.Service.BlogService.Blog)ViewBag.Blog;
}

<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
</head>
<body>

    <h1>First blog: </h1>
    <p>
        <table>
            <tr>
                <td>@blog.Name</td>
                <td>@blog.Owner</td>
                <td><a href="@blog.URL" target="_blank">Link</a></td>
            </tr>
        </table>
    </p>

    <h1>Articles</h1>

    <table>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td><a href="@article.URL" target="_blank">Link</a></td>
                <td>@article.Author</td>
                <td>@article.Contents</td>
            </tr>
        }
    </table>



</body>
</html>